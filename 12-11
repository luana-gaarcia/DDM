<body>

<div class="chat-container">
    <h2>Chatbot – Atividade</h2>

    <div class="messages" id="messagesBox"></div>

    <!-- LEGENDA -->
    <label for="inputMsg">Digite sua pergunta:</label>

    <!-- CAIXA DE TEXTO -->
    <input type="text" id="inputMsg" placeholder="Escreva algo...">

    <!-- BOTÃO -->
    <button onclick="sendMessage()">Enviar</button>
</div>

<script>
function sendMessage() {
    let box = document.getElementById("messagesBox");
    let input = document.getElementById("inputMsg");
    let text = input.value.trim();

    if (text === "") {
        // NOTIFICAÇÃO
        alert("⚠ Digite alguma mensagem!");
        return;
    }

    // Exibir mensagem do usuário
    box.innerHTML += `<div class='msg user'><strong>Você:</strong> ${text}</div>`;
    
    // Limpar caixa de texto
    input.value = "";

    // Resposta do chatbot (simples)
    let resposta = gerarResposta(text);

    setTimeout(() => {
        box.innerHTML += `<div class='msg bot'><strong>Bot:</strong> ${resposta}</div>`;
        box.scrollTop = box.scrollHeight;
    }, 500);
}

function gerarResposta(msg) {
    msg = msg.toLowerCase();

    if (msg.includes("oi") || msg.includes("olá")) 
        return "Olá! Como posso ajudar?";
    if (msg.includes("dieta")) 
        return "Para uma dieta equilibrada, inclua proteínas, frutas e vegetais.";
    if (msg.includes("chatbot")) 
        return "Sou um chatbot simples criado para esta atividade!";
    
    return "Não entendi, mas posso tentar ajudar com outra pergunta!";
}
</script>

